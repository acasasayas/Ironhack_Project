<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<script type='text/javascript' src='https://maps.googleapis.com/maps/api/js?libraries=places'></script>

  </head>
  <!-- top_menu -->
    <header class="header">
      <div class="row">
        <div id="top-menu" class="col-md-12 ">
          <nav class="navbar navbar-default navbar-fixed-top">
             <div class="container-fluid">
                  <div class="navbar-header">
                 <a class="navbar-brand" href="/">IH Project</a>
               </div>
               <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                 <ul class="nav navbar-nav navbar-right">
                   <li><%=link_to 'Acceder', '#myModal_login', id: :login, 'data-toggle' => "modal" if !current_user%></li>
                   <li><%=link_to 'Registrarse', href='/users/sign_up', id: :login, 'data-toggle' => "modal" if !current_user%></li>
                   <li><%=link_to current_user.email if current_user%></li>
                   <li><%=link_to 'Editar perfil', edit_user_registration_path  if current_user%></li>
                   <li><%=link_to 'Cerrar sesión', destroy_user_session_path, method: 'DELETE' if current_user%></li>
                   <li><a href="#">Quienes somos</a></li>
                   <li><a href="#">Condiciones</a></li>
                  </ul>
               </div>
             </div>
            </nav>
        </div>
      </div>
<!-- modal for login -->
<div class="modal fade" id="myModal_login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div id="modal-login" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3>Accede con tu email o <a href="/users/sign_up">Registrate</a></h3>
                  <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <a href="#" class="btn btn-lg btn-primary btn-block full-width">Facebook</a>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <a href="#" class="btn btn-lg btn-info btn-block full-width">Google</a>
                    </div>
                  </div>
                  <div class="login-or">
                      <hr class="hr-or">
                      <span class="span-or">o</span>
                  </div>
                <%= render "devise/shared/login" %>
                <%=link_to 'Olvidaste tu contraseña?', '#recovery_pass', id: :link_recovery_pass, 'data-toggle' => "modal"%>
            </div>
        </div>
      </div>
  </div>
  <!-- modal for club -->
  <div class="modal fade" id="modal_club" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
          <div class="modal-content modal-club">
            <div class="row">
              <div id="modal-title" class="col-md-12 modal-title center-box">
                <!-- nombre del club -->
              </div>
                <div class="row">
                  <div id="modal-center" class="col-xs-12 col-sm-12 col-md-12">
                    <!--info del club -->
                  </div>
                </div>
                <div class="row">
                  <div id="modal-footer" class="col-xs-12 col-sm-12 col-md-12">
                    <!-- fotos -->
                  </div>
                </div>
          </div>
          </div>
        </div>
    </div>
<!-- modal for recovery_pass -->
<div class="modal fade" id="recovery_pass" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h3>Recuperar contraseña</h3>
              <%= render "devise/shared/recoverypass" %>
            </div>
        </div>
    </div>
</div>
<!-- devise_login -->
  </header>
  <body>
    <div id="main">
      <%= yield %>
    </div>
  </body>
</html>
